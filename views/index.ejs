<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" 
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.3/font/bootstrap-icons.min.css">

    <title>To-Do List</title>

    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-3 text-center">To-Do List</h1>
        <div class="col-md-6 mx-auto form-list-area">
            <form action="/tasks" method="POST" class="mb-1">
                <div class="input-group">
                    <input type="text" name="description" class="form-control" placeholder="New task" required>
                    <button type="submit" class="btn btn-primary"><i class="bi bi-plus-circle"></i></button>
                </div>
            </form>
            <ul class="list-group"> 
                <% tasks.forEach(task => { %>
                    <li class="list-group-item mt-2 mb-2">
                        <span class="<%= task.completed ? 'completed' : '' %> description"><%= task.description %></span>
                        <div class="btn-group">
                            <% if (!task.completed) { %>
                                <form action="/tasks/<%= task.id %>/complete" method="POST">
                                    <button type="submit" class="btn btn-success mx-1"><i class="bi bi-check-all"></i></button>
                                </form>
                            <% } else { %>
                                <form action="/tasks/<%= task.id %>/notcomplete" method="POST">
                                    <button type="submit" class="btn btn-warning mx-1"><i class="bi bi-arrow-counterclockwise"></i></button>
                                </form>
                            <% } %>
                            <form action="/tasks/<%= task.id %>/delete" method="POST">
                                <button type="submit" class="btn btn-danger mx-1"><i class="bi bi-x"></i></button>
                            </form>
                        </div>             
                    </li>
                <% }) %>
            </ul>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
