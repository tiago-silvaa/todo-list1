<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" 
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.3/font/bootstrap-icons.min.css">

    <title>User Dashboard - Todo List</title>

    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>

    <!--Navbar improvisada-->
    
    <p style="color: white">Navbar improvisada:  <a href="/">Home</a> | <a href="/register">Register</a> | 
    <a href="/login">Login</a> | <a href="/todos">Todo</a> | <a href="/dashboard">User Dashboard</a> | 
    </p>

    <!--Username Display e Logout Option-->

    <div class="text-end">
        <button type="button" class="btn btn-outline-light me-2" style="border-radius: 40px;" ><strong>User:</strong> <i class="bi bi-person-circle"></i> <%= usernameDisplay %></button>
        <button type="button" class="btn btn-danger" style="margin-right: 50px; border-radius: 40px;" data-bs-toggle="modal" data-bs-target="#logoutModal">
            Logout <i class="bi bi-box-arrow-left"></i>
        </button>
    </div>


    <!--Modal Logout-->
    <div class="modal fade" id="logoutModal">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Logout</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to logout?
            </div>
            <div class="modal-footer">
                <form action="/logout" method="POST" class="text-end">
                    <button type="submit" class="btn btn-danger">Logout <i class="bi bi-box-arrow-left"></i></button>
                </form>
                <button type="button" class="btn btn-dark" data-bs-dismiss="modal">Close</button>
            </div>
      
          </div>
        </div>
    </div>

    <h1 class="display-4 text-center mb-3">User Dashboard <i class="bi bi-speedometer2"></i></h1>

    <!--Dashboard-->

    <div class="container dashboard">
        <div class="row rowTop mb-3">
            <div class="col-2">
                <div class="card card-top">
                    <div class="card-body">
                        <h5 class="card-title">Total Todos <i class="bi bi-list-ol"></i></h5>
                        <h1 class="display-1"><%= stats.countTotalTasks %></h1>
                    </div>
                </div>
            </div>
            <div class="col-2">
                <div class="card card-top">
                    <div class="card-body">
                        <h5 class="card-title">Completed <i class="bi bi-check-circle"></i></h5>
                        <h1 class="display-1"><%= stats.countCompletedTasks %></h1>
                    </div>
                </div>
            </div>
            <div class="col-2">
                <div class="card card-top">
                    <div class="card-body">
                        <h5 class="card-title">In Progress <i class="bi bi-hourglass-split"></i></h5>
                        <h1 class="display-1"><%= stats.countNotCompletedTasks %></h1>
                    </div>
                </div>
            </div>
            <div class="col-2">
                <div class="card card-top">
                    <div class="card-body">
                        <h5 class="card-title">High Priority</h5>
                        <h1 class="display-1"><%= stats.countHighPriorityTasks %></h1>
                    </div>
                </div>
            </div>
            <div class="col-2">
                <div class="card card-top">
                    <div class="card-body">
                        <h5 class="card-title">Medium Priority</h5>
                        <h1 class="display-1"><%= stats.countMediumPriorityTasks %></h1>
                    </div>
                </div>
            </div>
            <div class="col-2">
                <div class="card card-top">
                    <div class="card-body">
                        <h5 class="card-title">Low Priority</h5>
                        <h1 class="display-1"><%= stats.countLowPriorityTasks %></h1>
                    </div>
                </div>
            </div>
        </div>
        <div class="row rowBot">
            <div class="col-4">
                <div class="card card-bot">
                    <div class="card-body">
                        <h5 class="card-title">High Priority List <i class="bi bi-arrow-up"></i></h5>
                        <ul class="list-group">
                            <% highTasks.forEach(task => { %>
                                <li class="liDashboard mb-1">
                                    <span><%= task.description %></span>
                                    <span class="badge rounded-pill bg-danger me-2" style="float: right;">High</span>
                                </li>
                            <% }) %>
                        </ul>                    
                    </div>
                </div>
            </div>
            <div class="col-4">
                <div class="card card-bot">
                    <div class="card-body">
                        <h5 class="card-title">Medium Priority List <i class="bi bi-arrow-right"></i></h5>
                        <ul class="list-group">
                            <% mediumTasks.forEach(task => { %>
                                <li class="liDashboard mb-1">
                                    <span><%= task.description %></span>
                                    <span class="badge rounded-pill bg-warning text-dark me-2" style="float: right;">Medium</span>
                                </li>                               
                            <% }) %>
                        </ul>                
                    </div>
                </div>
            </div>
            <div class="col-4">
                <div class="card card-bot">
                    <div class="card-body">
                        <h5 class="card-title">Low Priority List <i class="bi bi-arrow-down"></i></h5>
                        <ul class="list-group">
                            <% lowTasks.forEach(task => { %>
                                <li class="liDashboard mb-1">
                                    <span><%= task.description %></span>
                                    <span class="badge rounded-pill bg-success me-2" style="float: right;">Low</span>
                                </li>
                            <% }) %>
                        </ul> 
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container container1 mt-3">
        <div class="mx-auto text-center">
            <a href="/todos" class="btn btn-outline-light btn-lg">Go Back</a>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>